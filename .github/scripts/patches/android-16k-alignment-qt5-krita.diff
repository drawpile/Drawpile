Description: Force enable 16K alignment on Android. Must only be applied to 64
bit builds. Based on a patch to Krita by Dmitry Kazakov.

--- a/mkspecs/android-clang/qmake.conf
+++ b/mkspecs/android-clang/qmake.conf
@@ -68,8 +68,8 @@
 QMAKE_CFLAGS_HIDESYMS   = -fvisibility=hidden
 QMAKE_CFLAGS_NEON       = -mfpu=neon
 
-QMAKE_LFLAGS_APP        = -Wl,--build-id=none -Wl,--no-undefined -Wl,-z,noexecstack -shared
-QMAKE_LFLAGS_SHLIB      = -Wl,--build-id=none -Wl,--no-undefined -Wl,-z,noexecstack -shared
+QMAKE_LFLAGS_APP        = -Wl,--build-id=none -Wl,--no-undefined -Wl,-z,noexecstack -shared -Wl,-z,max-page-size=16384 -Wl,-z,common-page-size=16384
+QMAKE_LFLAGS_SHLIB      = -Wl,--build-id=none -Wl,--no-undefined -Wl,-z,noexecstack -shared -Wl,-z,max-page-size=16384 -Wl,-z,common-page-size=16384
 QMAKE_LFLAGS_PLUGIN     = $$QMAKE_LFLAGS_SHLIB
 QMAKE_LFLAGS_NOUNDEF    = -Wl,--no-undefined
 QMAKE_LFLAGS_RPATH      = -Wl,-rpath=

